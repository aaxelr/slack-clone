<%- include('./components/header')%>

<div class=" mt-5 mx-auto text-center container row marketing text-secondary border border-1 shadow">
    <div class="p-5">

        <div class="mx-auto">
            <% if (!user.profile_pic) { %>
                <img class="img-fluid img-thumbnail w-50" src="/../public/uploads/default.jpg">
            <% } else { %>
                <img class="img-fluid img-thumbnail w-50" src="/../<%= profile_pic %>">
           <% } %>
        </div>

        <h3><%= user.name %></h3>
        <h4><%= user.email %></h4>

        <form action="/users/settings/picture" method="post" enctype="multipart/form-data">
            <input type="file" name="picture" /><br />
            <input type="submit" value="Save" class="btn btn-secondary" />
        </form>
    </div>
</div>